{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--features",
                "xmc4100"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "process",
            "command": "cargo",
            "args": [
                "clean"
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "label": "fmt",
            "type": "process",
            "command": "cargo",
            "args": [
                "fmt"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "check",
            "type": "process",
            "command": "cargo",
            "args": [
                "check",
                "--features",
                "xmc4100"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "clippy",
            "type": "process",
            "command": "cargo",
            "args": [
                "clippy",
                "--features",
                "xmc4100"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}